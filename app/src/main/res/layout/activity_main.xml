<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:text="Let's get it done..."
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainTaskLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView">

        <!-- Add Button (centered) -->
        <ImageButton
            android:id="@+id/add_main_task_btn"
            android:layout_width="77dp"
            android:layout_height="70dp"
            android:background="@drawable/circle_light_cream"
            android:contentDescription="Add Main Task"
            android:scaleType="fitCenter"
            android:src="@drawable/rounded_add_24"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Task Name Display -->
        <TextView
            android:id="@+id/main_task_name_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:maxLines="3"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_task_menu_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This is the main task name" />

        <!-- 3-Dot Menu Button -->
        <TextView
            android:id="@+id/main_task_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="&#8942;"
            android:textColor="@color/secondary_text"
            android:textSize="24sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/complete"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/accent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/minorTasksLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTaskLayout">

        <!-- Minor Task 1 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/add_minor_task_btn_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_light_cream"
                android:contentDescription="Add Minor Task 1"
                android:scaleType="fitCenter"
                android:src="@drawable/rounded_add_24"
                android:visibility="visible" />

            <TextView
                android:id="@+id/minor_task_name_display_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/minor_task_menu_btn_1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Subtask 1" />

            <TextView
                android:id="@+id/minor_task_menu_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:text="&#8942;"
                android:textColor="@color/secondary_text"
                android:textSize="20sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <CheckBox
                android:id="@+id/complete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_minor_task_btn_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/accent"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <!-- Minor Task 2 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/add_minor_task_btn_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_light_cream"
                android:contentDescription="Add Minor Task 2"
                android:scaleType="fitCenter"
                android:src="@drawable/rounded_add_24"
                android:visibility="visible" />

            <TextView
                android:id="@+id/minor_task_name_display_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/minor_task_menu_btn_2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Subtask 2"/>

            <TextView
                android:id="@+id/minor_task_menu_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:text="&#8942;"
                android:textColor="@color/secondary_text"
                android:textSize="20sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <CheckBox
                android:id="@+id/complete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_minor_task_btn_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/accent"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <!-- Minor Task 3 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/add_minor_task_btn_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_light_cream"
                android:contentDescription="Add Minor Task 3"
                android:scaleType="fitCenter"
                android:src="@drawable/rounded_add_24"
                android:visibility="visible" />

            <TextView
                android:id="@+id/minor_task_name_display_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/minor_task_menu_btn_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Subtask 3"/>

            <TextView
                android:id="@+id/minor_task_menu_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:text="&#8942;"
                android:textColor="@color/secondary_text"
                android:textSize="20sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <CheckBox
                android:id="@+id/complete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_minor_task_btn_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/accent"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewTasks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minorTasksLayout">

        <LinearLayout
            android:id="@+id/tasksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- The "Add New Task" placeholder will be here -->
            <LinearLayout
                android:id="@+id/addTaskPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Add New Task Icon"
                    android:src="@drawable/rounded_add_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Add New Task"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:id="@+id/addTaskDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Dynamically added tasks will go here -->

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/homeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Home"
                android:scaleType="centerInside"
                android:src="@drawable/home"
                app:tint="@color/primary_text" />

        </LinearLayout>

        <!-- Add New Task Button -->
        <LinearLayout
            android:id="@+id/addNewTaskBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="55dp"
                android:contentDescription="Add New Task"
                android:scaleType="centerInside"
                android:src="@drawable/rounded_add_24"
                app:tint="@color/accent" />
        </LinearLayout>

        <!-- View Priority Quadrant Button -->
        <LinearLayout
            android:id="@+id/viewPriorityQuadrantBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="View Priority Quadrant"
                android:scaleType="centerInside"
                android:src="@drawable/main_task"
                app:tint="@color/accent" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
